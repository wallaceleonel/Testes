@model Calculadora.Models.ComodoViewModel

@{
    ViewData["Title"] = "Index";
}
<form asp-action="Index" style="color:darkblue">
    <div class="text-center">
        <h1 class="display-4">Calculadora</h1>
        
        <p><label>Parede Fundo</label></p>
        <input type="number" asp-for="AlturaParedeFundo" placeholder="Altura (M)" required: true, maxLength: 4, min: 1, max: 50 />
        <input type="number" asp-for="LarguraParedeFundo" placeholder="Largura (M)" required: true, maxLength: 4, min: 1, max: 50 />
        
        <p><label>Parede Frente</label></p>
        <input type="number" asp-for="AltruaParedeFrente" placeholder="Altura (M)" required: true, maxLength: 4, min: 1, max: 50 />
        <input type="number" asp-for="LarguraParedeFrente" placeholder="Largura (M)" required: true, maxLength: 4, min: 1, max: 50 />

        <p><label>Parede Esquerda</label></p>
        <input type="number" asp-for="AlturaParedeEsquerda" placeholder="Altura (M)" required: true, maxLength: 4, min: 1, max: 50 />
        <input type="number" asp-for="LarguraParedeEsquerda" placeholder="Largura (M)" required: true, maxLength: 4, min: 1, max: 50 />

        <p><label>Parede Direita</label></p>
        <input type="number" asp-for="AlturaParedeDireita" placeholder="Altura (M)" required: true, maxLength: 4, min: 1, max: 50 />
        <input type="number" asp-for="LarguraParedeDireita" placeholder="Largura (M)" required: true, maxLength: 4, min: 1, max: 50 />
        <p></p>

        <div class="form-group">
            <label asp-for="QtdJanela" class="control-label"></label>
            <select asp-for="QtdJanela" class="form-control">
                <option value="0">
                    Escolha uma opção
                </option>
                <option value="1">1 Janela</option>
                <option value="2">2 Janelas</option>
                <option value="3">3 Janelas</option>
                <option value="4">4 Janelas</option>
                <option value="5">5 Janelas</option>
                <option value="6">6 Janelas</option>
                <option value="7">7 Janelas</option>
                <option value="8">8 Janelas</option>
                <option value="9">9 Janelas</option>
                <option value="10">10 Janelas</option>
            </select>
            <span asp-validation-for="QtdJanela" class="text-danger"></span>
                 
            <label asp-for="QtdPorta" class="control-label"></label>
            <select asp-for="QtdPorta" class="form-control">
                <option value="0">
                    Escolha uma opção
                </option>
                <option value="1">1 Porta</option>
                <option value="2">2 Portas</option>
                <option value="3">3 Portas</option>
                <option value="4">4 Portas</option>
                <option value="5">5 Portas</option>
                <option value="6">6 Portas</option>
                <option value="7">7 Portas</option>
                <option value="8">8 Portas</option>
                <option value="9">9 Portas</option>
                <option value="10">10 Portas</option>
            </select>
        </div>
       @* botão para abrir modal *@
        <button type="button" class="btn btn-primary" data-toggle="modal">
            <input type="submit" value="Calcular" asp-for="Operador" />
        </button>
        @* botão para abrir modal *@

        @*Modal*@
        <div  class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-header">
                    <h2>Consumo</h2>
                </div>
                <div class="modal-body">
                    <p></p>
                    <p><label>Resultado</label></p>
                    <p><input type="text" asp-for="@ViewData["result"]" disabled /></p>
                </div>
            </div>
        </div>
       @* Modal*@
</form>